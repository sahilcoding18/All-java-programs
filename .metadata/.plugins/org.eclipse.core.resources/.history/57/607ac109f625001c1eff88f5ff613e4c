package patterns;
import java.util.Scanner;
public class Reversepattern {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int i =1;
		int val=1;
		int space =1;
		while(space<=n-1)
		{
			System.out.print(" ");
			space=space+1;
		}
        while(i<=n)
        {
        	int j=1; 
        	while(j<=i)
        	{
        		System.out.print(val+" ");
        		j=j+1;
        		val=val+1;
        	}
        	System.out.println();
        	i=i+1;
        }
	}

}
